<Window x:Class="Bookkeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Bookkeeper.ViewModel"
        xmlns:vw="clr-namespace:Bookkeeper.View"
        Title="Bookkeeper" Height="400" Width="550">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:BookListViewModel}">
            <vw:BookListView/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid Margin="4">
        <Border Background="GhostWhite" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5">
            <ItemsControl ItemsSource="{Binding ViewModels}" Margin="4" />
            
        </Border>
        
    </Grid>
</Window>
